<h1>Tasks</h1>

<ul class="no-bullets">
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= form_with(model: task, url: task_path(task), method: :patch) do |f| %>
        <%= f.check_box :completed %>
        <%= f.submit %>
      <% end %>
      <%= link_to 'Edit', edit_task_path(task) %>
        <%= submit_tag 'Delete' %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Task', new_task_path %>
